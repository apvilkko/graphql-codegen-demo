{
  "compilerOptions": {
    "module": "CommonJS",
    "composite": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "exclude": ["**/node_modules/**"]
}
